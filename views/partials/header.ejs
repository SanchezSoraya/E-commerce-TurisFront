                    </li>
                    <a href="/users/profile">
                        <li class="text-navbar"><i class="fas fa-user"></i><a href="/users/profile">Mi perfil</a></li>
                    </a>
                    <a href="/tienda">
                        <li class="text-navbar"><i class="fas fa-store"></i><a href="/tienda">Tienda</a></li>
                    </a>
                    <a href="/carrito">
                        <li class="text-navbar"><i class="fas fa-shopping-cart"></i><a href="/carrito">Carrito</a>
                        </li>
                    </a>
                    <li>
                        <form action="/users/logout" method="post">
                            <button class="boton-cerrar-sesion" type="submit">Cerrar sesion</button>
                        </form>
                    </li>
                    <% } %>
        </ul>
    </div>
</header>