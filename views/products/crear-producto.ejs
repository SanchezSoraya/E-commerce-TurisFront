<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head.ejs") %>
    <link rel="stylesheet" href="/css/crear-producto.css">
</head>

<body>
  <%- include("./partials/header.ejs") %>

    <div class="create-product">
      <h2 class="copy-create">AÃ±adir nuevo producto</h2>
      <form action='/products/create' class='form-register' enctype="multipart/form-data" method="POST">
        <div class="imagen-product">
          <label for="imagen">Ingrese imagenes de su producto</label>
          <i class="validacion-estado-icono fas fa-check-circle"></i>
          <input type="file" name="imagen" class="imagen-product">
          <p class="errorFront"></p>
          <% if (locals.errors && locals.errors.imagen) {%>
            <p class="errors">
              <%= errors.imagen.msg %>
            </p>
            <% } %>
        </div>
        <div id="grupo-titulo" class="grupo-formulario">
          <% if (locals.errors && locals.errors.titulo) {%>
            <p class="errors">
              <%= errors.titulo.msg %>
            </p>
            <% } %>
              <label for="titulo" class="label-form">Titulo</label>
              <i class="validacion-estado-icono fas fa-check-circle"></i>
              <input type="text" name="titulo" class="inputs estado-input titulo-product"
                placeholder="Ingrese el nombre del producto" required>
              <p class="errorFront"></p>
        </div>
        <div id="grupo-precio" class="grupo-formulario">
          <% if (locals.errors && locals.errors.precio) {%>
            <p class="errors">
              <%= errors.precio.msg %>
            </p>
            <% } %>
              <label for="precio" class="label-form">Precio</label>
              <i class="validacion-estado-icono fas fa-check-circle"></i>
              <input type="number" name="precio" class="inputs estado-input precio-product" placeholder="Precio $ARS"
                required>
              <p class="errorFront"></p>
        </div>
        <div id="grupo-color" class="grupo-formulario">
          <% if (locals.errors && locals.errors.color) {%>
            <p class="errors">
              <%= errors.color.msg %>
            </p>
            <% } %>
              <!-- <input type='text' name="color" class="color-product" placeholder="Color del producto"
                                required> -->
              <label for="color" class="label-form">Color y talle</label>
              <br>
              <select id='color' name="color">
                <% colors.forEach((color)=>{ %>
                  <option value="<%= color.id %>">
                    <%= color.name %>
                  </option>
                  <% }) %>
              </select>

              <select name="size">
                <% sizes.forEach((size)=>{ %>
                  <option value="<%= size.id %>">
                    <%= size.size %>
                  </option>
                  <% }) %>
              </select>

        </div>
        <div id="grupo-descripcion" class="grupo-formulario">
          <label for="descripcion" class="label-form">Descripcion</label>
          <i class="validacion-estado-icono fas fa-check-circle"></i>
          <textarea name="descripcion" class="inputs estado-input description-product"
            placeholder="Descripcion del producto" required></textarea>
          <p class="errorFront"></p>
          <% if (locals.errors && locals.errors.descripcion) {%>
            <p class="errors">
              <%= errors.descripcion.msg %>
            </p>
            <% } %>
              <p class="errorFront"></p>
        </div>
        <div class="buttons">
          <button class="submit" type="submit">Publicar</button>
          <button class="reset" type="reset">Cancelar</button>
        </div>
      </form>
    </div>
</body>

<footer>
  <%- include("./partials/footer.ejs") %>
</footer>
<script src="/js/productsValidation.js"></script>

</html>